{
  "name": "linkify",
  "version": "3.0.0",
  "description": "Intelligent link recognition, made easy",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Soapbox/linkifyjs.git"
  },
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run build --workspaces",
    "copy": "copyfiles -f packages/*/dist/*.js dist",
    "dist": "run-s clean build copy",
    "lint": "eslint src/**/*.js test/**/*.js",
    "test": "nyc --reporter=html --reporter=text mocha test/index.js",
    "test:ci": "karma start test/ci.conf.js --single-run",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "author": "Soapbox Innovations (@SoapBoxHQ)",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/eslint-parser": "^7.13.10",
    "@babel/eslint-plugin": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/register": "^7.13.8",
    "@nfrasser/simple-html-tokenizer": "^0.5.11-1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "chai": "^4.3.4",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.22.0",
    "eslint-plugin-mocha": "^8.1.0",
    "glob": "^7.1.6",
    "jquery": "^3.6.0",
    "jsdom": "^11.12.0",
    "karma": "6.2.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^2.1.0",
    "karma-qunit": "^4.1.2",
    "karma-sauce-launcher": "^4.3.5",
    "mocha": "^8.3.2",
    "mocha-lcov-reporter": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "qunit": "^2.14.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "request": "^2.88.2",
    "rollup": "^2.42.1",
    "rollup-plugin-terser": "^7.0.2"
  },
  "private": true,
  "engines": {
    "node": ">=8"
  },
  "workspaces": [
    "./packages/*"
  ]
}
